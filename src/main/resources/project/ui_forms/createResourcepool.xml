<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CreateResourcepool</help>
    <formElement>
        <type>entry</type>
        <label>ESX Connection:</label>
        <property>connection_config</property>
        <required>1</required>
        <documentation>The name of the configuration which holds the connection information for ESX server.</documentation>
    </formElement>
	<formElement>
        <type>entry</type>
        <label>Resourcepool Name:</label>
        <property>resourcepool_name</property>
        <required>1</required>
        <documentation>Name of the Resource Pool to be created.</documentation>
    </formElement>
	<formElement>
        <type>entry</type>
        <label>Parent Resourcepool Name:</label>
        <property>parent_resourcepool_name</property>
        <required>1</required>
        <documentation>Name of the Parent Resource Pool in which new Resource Pool is to be created.</documentation>
    </formElement>
    <formElement>
        <type>select</type>
        <label>CpuShare:</label>
        <property>cpu_shares</property>
        <required>1</required>
        <documentation>Shares define how much access you get to a resource.</documentation>
        <option><name>low</name><value>low</value></option>
        <option><name>normal</name><value>normal</value></option>
		<option><name>high</name><value>high</value></option>
		<option><name>custom</name><value>custom</value></option>
    </formElement>
    <formElement>
        <type>select</type>
        <label>MemShare:</label>
        <property>mem_shares</property>
        <required>1</required>
        <documentation>Shares define how much access you get to a resource.</documentation>
        <option><name>low</name><value>low</value></option>
        <option><name>normal</name><value>normal</value></option>
		<option><name>high</name><value>high</value></option>
		<option><name>custom</name><value>custom</value></option>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>JobStep Timeout:</label>
        <property>esx_timeout</property>
        <required>0</required>
        <documentation>Timeout for the step execution in minutes. Blank means no timeout.</documentation>
    </formElement>
</editor>

