<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#DeleteEntity</help>
    <formElement>
        <type>entry</type>
        <label>ESX Connection:</label>
        <property>connection_config</property>
        <required>1</required>
        <documentation>The name of the configuration which holds the connection information for ESX server.</documentation>
    </formElement>
    <formElement>
        <type>select</type>
        <label>Entity Type:</label>
        <property>entity_type</property>
        <required>1</required>
        <documentation>The entity type to be listed (ClusterComputeResource, ComputeResource, Datacenter, Folder, HostSystem, ResourcePool, or VirtualMachine) present on the target VirtualCenter Server or ESX Server system.</documentation>
        <option><name>ClusterComputeResource</name><value>ClusterComputeResource</value></option>
        <option><name>ComputeResource</name><value>ComputeResource</value></option>
        <option><name>Datacenter</name><value>Datacenter</value></option>
        <option><name>Folder</name><value>Folder</value></option>
        <option><name>HostSystem</name><value>HostSystem</value></option>
        <option><name>ResourcePool</name><value>ResourcePool</value></option>
        <option><name>VirtualMachine</name><value>VirtualMachine</value></option>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Entity Name:</label>
        <property>entity_name</property>
        <required>1</required>
        <documentation>The name of the entity which is to be deleted.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>JobStep Timeout:</label>
        <property>esx_timeout</property>
        <required>0</required>
        <documentation>Timeout for the step execution in minutes. Blank means no timeout.</documentation>
    </formElement>
</editor>
