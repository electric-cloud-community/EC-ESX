<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#Export</help>
    <formElement>
        <type>entry</type>
        <label>ESX Connection:</label>
        <property>connection_config</property>
        <required>1</required>
        <documentation>The name of the configuration which holds the connection information for ESX server.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>OVF Tool Path:</label>
        <property>ovftool_path</property>
        <required>1</required>
        <documentation>Path of the ovf tool.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Host:</label>
        <property>esx_host</property>
        <required>1</required>
        <documentation>Name of the host where virtual machine is located.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Datacenter:</label>
        <property>esx_datacenter</property>
        <required>1</required>
        <documentation>Name of the datacenter.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Datastore:</label>
        <property>esx_datastore</property>
        <required>1</required>
        <documentation>Name of the datastore.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>VM Name:</label>
        <property>esx_vmname</property>
        <required>1</required>
        <documentation>Name of the virtual machine to export.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Target directory:</label>
        <property>esx_target_directory</property>
        <documentation>Absoulte path to the directory where virtual machines will be exported.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Number of VMs:</label>
        <property>esx_number_of_vms</property>
        <required>0</required>
        <documentation>Number of virtual machines to export (default is 1). If the value is greater than 1, a suffix is added to VM names. The suffix consists of an underscore and the VM number ('_#').</documentation>
        <value>1</value>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>JobStep Timeout:</label>
        <property>esx_timeout</property>
        <required>0</required>
        <documentation>Timeout for the step execution in minutes. Blank means no timeout.</documentation>
    </formElement>
</editor>
