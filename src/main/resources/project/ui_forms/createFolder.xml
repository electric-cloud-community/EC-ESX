<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CreateFolder</help>
    <formElement>
        <type>entry</type>
        <label>ESX Connection:</label>
        <property>connection_config</property>
        <required>1</required>
        <documentation>The name of the configuration which holds the connection information for ESX server.</documentation>
    </formElement>
    <formElement>
        <type>select</type>
        <label>Parent Type (Folder/Datacenter):</label>
        <property>parent_type</property>
        <required>1</required>
        <documentation>The parent (data center or folder) in which folder is to be created.</documentation>
        <option><name>Datacenter</name><value>Datacenter</value></option>
        <option><name>Folder</name><value>Folder</value></option>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Parent Name (Folder/Datacenter Name): </label>
        <property>parent_name</property>
        <required>1</required>
        <documentation>The name of the parent in which folder is to be created.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Folder Name:</label>
        <property>folder_name</property>
        <required>1</required>
        <documentation>Name of the folder to be created.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>JobStep Timeout:</label>
        <property>esx_timeout</property>
        <required>0</required>
        <documentation>Timeout for the step execution in minutes. Blank means no timeout.</documentation>
    </formElement>
</editor>
